                                @Html.EditorFor(model => model.vaccinationdrugname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vaccinationdrugname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.VaccinationDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
