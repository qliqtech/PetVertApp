@model PetVertApp.Models.Treatment

@{
    ViewBag.Title = "Create";
    
}


<style>
    .right_col {
        min-height: 1700px !important;
    }
</style>

<div class="right_col" role="main">

    <div class="page-title">
        <div class="title_left">
            <h3>Pet Name: @ViewBag.petname</h3>
        </div>
        <div class="title_right">

        </div>
    </div>

    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#normalmodal">Normal Treatment</button>

    <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#vacmodal">Vaccination</button>

    <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#dewormmodal">Deworming</button>

    <div class="alert-success">@TempData["success"]</div>

    <div id="dewormmodal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Deworming</h4>
                </div>
                <div class="modal-body">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Vaccination</h4>
                        </div>
                        <div class="modal-body">

                            @using (Html.BeginForm())
                             {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(model => model.petid, new { @Value = ViewBag.petid });

                              


                                <div class="form-horizontal">
                                    <h4> </h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.dewormdrug, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.dewormdrug, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.dewormdrug, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DewormingDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.DewormingDateTime, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DewormingDateTime, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.FutureDewormDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.FutureDewormDate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FutureDewormDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>



   
    <div id="vacmodal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Vaccination</h4>
                </div>
                <div class="modal-body">

            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.petid, new { @Value = ViewBag.petid });

            @Html.HiddenFor(model => model.treatmenttype, new { @Value = "vaccination" });


                    <div class="form-horizontal">
                        <h4> </h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.vaccinationdrugname, htmlAttributes: new { @class = "control-label col-md-2" })
